<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Undisputed</title>
    <environment include="Development">
        <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <script src="https://kit.fontawesome.com/25a49094fe.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Undisputed.styles.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/25a49094fe.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link rel="stylesheet" href="~/dist/undisputed.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("head", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-xl">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="160" height="40" src="/img/undisputed-white.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark-gray" asp-area="" asp-controller="topic" asp-action="Index">Topics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark-gray" asp-area="" asp-controller="team" asp-action="Index">Teams</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark-gray" asp-area="" asp-controller="user" asp-action="Index">Users</a>
                            </li>
                        }
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark-gray" asp-area="" asp-controller="neat" asp-action="Index">Neat's</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark-gray" asp-area="" asp-controller="shop" asp-action="Index">Shop</a>
                        </li>

                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark-gray" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark-gray" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        } else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark-gray" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark-gray" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer">

        <div class="container py-4">
            <div class="footer__group">
                <div class="group__left">
                    <a class="navbar-brand fix-position logo" asp-area="" asp-controller="Home" asp-action="Index"><img width="160" height="36" src="/img/undisputed-black2.png" /></a>
                    <div class="container-txt">
                        <span>
                            Undisputed is the station where you have free speech, meet high-performance individuals and take a look at all types of subjects. Welcome!
                        </span>
                    </div>

                </div>
                <div>
                    <div class="group-links">
                        <h3 class="h3">Join</h3>
                        <ul class="footer__nav">
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="topic" asp-action="Index">Topics</a>
                            </li>
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="team" asp-action="Index">Teams</a>
                            </li>
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="neat" asp-action="Index">Neat's</a>
                            </li>
                        </ul>

                    </div>

                </div>
                <div>
                    <div class="group-links">
                        <h3 class="h3">Support Us</h3>
                        <ul class="footer__nav">
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="shop" asp-action="Index">Shop</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div>
                    <div class="group-links">
                        <h3 class="h3">Legal</h3>
                        <ul class="footer__nav">
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="footer__link text-white-opt" asp-area="" asp-controller="contact" asp-action="Index">Contact</a>
                            </li>
                        </ul>
                    </div>
                    
                </div>

               
            </div>
           
        </div>
        <div class="bg-black py-4">
            <div class="container">
                <small class="text-white-opt"> &copy; 2022 - Undisputed </small>
            </div>
           
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
          integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
          crossorigin="anonymous" 
          asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
          asp-fallback-test="window.jQuery"></script>
        <script 
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">
        </script>
        <script src="~/dist/undisputed.min.js" asp-append-version="true"></script>
    </environment>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
